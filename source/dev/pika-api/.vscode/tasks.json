{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Azure Functions Locally",
            "type": "shell",
            "command": "func start",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Publish to Azure",
            "type": "shell",
            "command": "func",
            "args": [
                "azure",
                "functionapp",
                "publish",
                "<function-app-name>"
            ],
            "group": "deploy",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}